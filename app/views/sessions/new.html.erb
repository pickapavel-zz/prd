<div>
  <h2>Prihlásenie</h2>
</div>

<%= form_tag session_path, class: "form-boxed" do |f| %>
  <%= render "layouts/flash" %>

  <div class="form-group">
    <label class="required" for="user">Užívateľ</label>
    <div class="input-icon input-icon-left">
      <i class="fa fa-user"></i>
      <%= text_field_tag :email, params[:email], class: "input-default", placeholder: t(".email") %>
    </div>
  </div>

  <div class="form-group">
    <label class="required" for="password">Heslo</label>
    <div class="input-icon input-icon-left">
      <i class="fa fa-lock"></i>
       <%= password_field_tag :password, "", class: "input-default", placeholder: t(".password"), data: { behavior: "PasswordField" } %>
    </div>
  </div>

  <div class="form-group">
    <%= submit_tag "Prihlásit", class: "btn btn-default" %>
  </div>
<% end %>
